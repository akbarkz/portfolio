{
  "name": "portfolio",
  "version": "0.1.0",
  "license": "MIT",
  "dependencies": {},
  "devDependencies": {
    "concurrently": "9.1.2",
    "husky": "8.0.3"
  },
  "scripts": {
    "start:client": "cd client && yarn start",
    "start:server": "cd server && flask --app app run",
    "start": "concurrently \"yarn start:client\" \"yarn start:server\"",
    "build:client": "cd client && yarn && yarn build",
    "client:compile": "cd client && yarn compile",
    "client:lint": "cd client && yarn lint",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:migrate": "docker-compose exec backend python migrate_data.py",
    "docker:backup": "docker-compose exec mongodb mongodump --out=/data/backup --db=portfolio",
    "docker:restart": "docker-compose restart",
    "docker:clean": "docker-compose down -v",
    "prepare": "husky install"
  }
}
